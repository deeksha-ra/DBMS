SELECT * FROM Product;
SELECT c.name, o.order_id, o.total_amount, o.order_date FROM Customer cJOIN Orders o ON c.customer_id = o.customer_id;
SELECT SUM(total_amount) AS total_revenue FROM Orders;
SELECT product_name, stock FROM Product WHERE stock < 5;
